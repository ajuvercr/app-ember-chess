{{page-title 'Rock & Roll with Octane'}}
<div class="bg-blue-900 text-gray-100 p-8 h-screen">
  <div class="mx-auto mb-4">
    <div class="h-12 flex gap-4 items-center mb-4 border-b-2">
      <LinkTo @route="bands">
        <h1 class="font-bold text-2xl">
          Rock & Roll
          <span class="font-normal">
            with Octane
          </span>
        </h1>
      </LinkTo>
      <LinkTo @route="account">
        <h1 class="text-2xl">
          Manage Account
        </h1>
      </LinkTo>
      <LinkTo @route="foobar">
        <h1 class="text-2xl">
          FooBar
        </h1>
      </LinkTo>

      <div style="margin-left: auto;">
        <h1 class="text-2xl">
          {{@model.user.name}}
        </h1>
      </div>
    </div>
    <div class="flex flex-wrap -mx-2">
      {{outlet}}
    </div>
  </div>

</div>
